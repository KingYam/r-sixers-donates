---
layout: layouts/base.njk
---
<div class="container">
    <div class="row pb-5">
        <div class="col-md-2 align-self-center py-3">
            <a href="/">
                <i class="back fas fa-arrow-left"></i>
            </a>
        </div>
        <div class="col-md">
            <h1 class="post-title pb-3">{{ title }}</h1>
        </div>
    </div>
    <div class="row pt-5">
        <div class="col">
            {{ content | safe }}
            <a href="{{ threadLink }}" target="_blank">Link to Thread</a>
        </div>
    </div>
    <div class="row py-5">
        <div class="col">
            <p class="shout-out">Total Thread Donation: <br /><span class="shout-total">${{ totalDonations }}</span></p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="disclaimer p-2 text-center">
                <p class="d-inline"><strong>Important note:</strong> these totals are approximate as not everyone that donated posted totals and/or proof of donation.</p>
            </div>
        </div>
    </div>
</div>
